<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.don.pieviewlibrary.PercentPieView
            android:id="@+id/pieView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            app:centerTextColor="#000000"
            app:centerTextSize="15sp"
            app:circleWidth="50dp"
            app:dataTextColor="#ffffff"
            app:dataTextSize="10sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="擅长:法律纠纷\n         财产纠纷\n         离婚协议"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F3F3"/>

    <TextView
        android:id="@+id/user_evaluate_count"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:text="用户评价 (32条)"/>

    <com.yuanjin.attorney.attorney.ui.view.MyListView
        android:id="@+id/lv_user_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8"/>


    <TextView
        android:id="@+id/all_evaluate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="全部评价"
        android:textColor="#999999"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#F3F3F3"/>

</LinearLayout>