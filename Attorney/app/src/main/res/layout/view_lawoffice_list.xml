<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:id="@+id/lawoffice_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/lawoffice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="赢灿律所"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/call_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/call_phone_shape"
        android:text="电话咨询"
        android:textColor="#333333"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/phone_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="旗下的律师 "
            android:textColor="#404042"/>

        <TextView
            android:id="@+id/lawyer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textColor="#CE2D24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  案件数 "
            android:textColor="#404042"/>

        <TextView
            android:id="@+id/case_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 75"
            android:textColor="#CE2D24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="  咨询数 "
            android:textColor="#404042"/>

        <TextView
            android:id="@+id/consult_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 88"
            android:textColor="#CE2D24"/>

    </LinearLayout>


    <TextView
        android:id="@+id/goodAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="65dp"
        android:text="擅长合同纠纷"
        android:textColor="#404042"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/map_icon"/>

        <TextView
            android:id="@+id/lawoffice_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上海市东靖路669弄105号401室"/>

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离您1.5千米"
            android:textColor="#999999"
            android:textSize="10sp"
            />


    </LinearLayout>

</RelativeLayout>