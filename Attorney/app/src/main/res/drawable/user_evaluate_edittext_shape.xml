<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="270"
        android:endColor="#f0f0f0"
        android:startColor="#f0f0f0"

        />
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp"/><!--     设置圆角 -->
    <corners android:radius="8dp"/><!--     填充色 -->
    <stroke
        android:width="0.5dp"
        android:color="#00ffffff"
        android:dashGap="0dp"
        android:dashWidth="3dp"/><!--     最小宽高 -->
    <size
        android:width="100dp"
        android:height="20dp"/>

</shape>